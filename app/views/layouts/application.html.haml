!!! 5
  
%head= render 'layouts/head'

%nav= render 'layouts/navigation'

%body
  
  %section#main{ role: 'main',:class => "#{controller.controller_name}" }
    .container
      .row-fluid
          
        - if current_user
          %section.span10#main_background
            = render 'layouts/flashes'
            .span7
              %h2#content_title= @title
              #main_content= yield
            .span3#user_side
              = render 'shared/user_side'
      
        - else
          = render 'layouts/flashes'
          .span10#sign_in_background
            = yield
	
  %footer.container
    =render 'layouts/footer'
	
%br
= debug(params) if Rails.env.development?