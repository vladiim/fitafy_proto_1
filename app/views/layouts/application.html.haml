%head= render 'layouts/head'

%body#main_content_yo
  .container-fluid

    - if current_user
      %nav.row-fluid
        .span12= render 'layouts/navigation'

    %section
      .row-fluid
        - if current_user
          .span12= render 'layouts/flashes'
          .row-fluid
            %h1.span12= @title
            .span12= yield
        - else
          = render 'layouts/flashes'
          = yield

  %footer.container-fluid
    =render 'layouts/footer'

