!!! 5
  
%head= render 'layouts/head'

%body

  %nav.navbar.navbar-fixed-top= render 'layouts/navigation'

  %section#main{ role: 'main',:class => "#{controller.controller_name}" }
          
    - if current_user
      %section
        = render 'layouts/flashes'
        %h2#content_title= @title
        #main_content= yield
        / .span3#user_side
        /   = render 'shared/user_side'
    
    - else
      = render 'layouts/flashes'
      = yield
	
  %footer.container
    =render 'layouts/footer'
	
