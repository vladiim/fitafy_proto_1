%head= render 'layouts/head'

%body
  .container-fluid

    - if current_user
      %nav.row-fluid
        .span12= render 'layouts/navigation'

    %section#main_content_yo
      .row-fluid
        - if current_user
          .span12= render 'layouts/flashes'
          %h1.row-fluid= @title
          .row-fluid.span12= yield
        - else
          = render 'layouts/flashes'
          = yield

  %footer.container-fluid
    =render 'layouts/footer'

