//########## Bookings
%li.dropdown
  %a{"href" => "#", "class" => "dropdown-toggle", "data-toggle" => "dropdown"}
    %i.icon-calendar.icon-white
    Bookings
    %span.caret
  %ul.dropdown-menu
    %li=link_to "Bookings: #{current_user.bookings.count}", bookings_path
    %li=link_to "Create Booking", new_booking_path
