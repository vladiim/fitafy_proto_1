%ul.nav-bar

  - @presenter.body_parts.each do |body_part|

    %li{:class => "has-flyout"}
      %a{href: "#"} 
        = body_part
        .flyout.small
          = hidden_field_tag "#{@presenter.model}[exercise_ids][]", nil
          - for exercise in Exercise.where(body_part: "#{body_part}")
            = check_box_tag "#{@presenter.model}[exercise_ids][]", exercise.id, @presenter.parent.exercise_ids.include?(exercise.id), id: dom_id(exercise)
            = label_tag dom_id(exercise), exercise.title

- if @presenter.model == "booking"
  = simple_form_for @presenter.parent do |f|
    = f.button :submit, "#{@presenter.title}", :class => "a button"