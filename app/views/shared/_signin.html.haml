= simple_form_for @user_session, html: {:class => "well form-inline" }  do |f|

  = f.error_notification
  
  #user_session_new_user_name
    = f.input :username, :label => false, placeholder: "User name", required: true, input_html: {size: 15}, maxlength: 20

  #user_session_new_password
    = f.input :password, :label => false, placeholder: "Password", required: true, input_html: {size: 15}, maxlength: 20

  #user_session_new_submit
    = f.button :submit, "Sign in"

  #forgot_password
    = link_to "Forgot password?", new_password_reset_path