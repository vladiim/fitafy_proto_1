%table
  %tr
    %td
      - if current_user.training?(@user)
        = render 'shared/train_form/untrain'
      
      - else
        = render 'shared/train_form/train'

    %td
      - if @user.trainer? 
        - if @user.training?(current_user)
          = render 'shared/train_form/get_untrained_by'

        - else
          = render 'shared/train_form/get_trained_by'
