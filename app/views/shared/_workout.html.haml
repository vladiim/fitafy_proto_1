- for workout in @workouts

  %ul
    %li
      %h6= link_to "#{workout.title}", workout_path(workout)
      = link_to "Create Booking", new_booking_path(workout: workout) 
      |
      = "#{workout.exercises.count} exercises"
      |
      = link_to "Delete Workout", workout_path(workout), method: :delete, confirm: "Are you sure you want to delete this workout?"