%table.table.span11
  %tr#table_blue
    %thead
      %th Workout
      %th Exercises
      %th
      %th

  %tbody  
    - for workout in @workouts 
      %tr
        %td= link_to "#{workout.title}", workout_path(workout)
        %td= "#{pluralize(workout.exercises.count, 'exercise')}"
        %td= link_to "Create Booking", new_booking_path(workout: workout) 
        %td= link_to "Delete Workout", workout_path(workout), method: :delete, confirm: "Are you sure you want to delete this workout?"

= link_to "Create Workout", new_workout_path, :class => "btn btn-large btn-primary"