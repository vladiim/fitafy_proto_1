.row-fluid
  = render "shared/train_form"

.row-fluid
  %table.span6.table.table-bordered.table-striped

    %tbody
      %tr
        %th Clients
        %td#client-count
          = @presenter.user.training.count
      %tr
        %th Bookings
        %td#booking-count
          = @presenter.user.bookings.count

      %tr
        %th Workouts
        %td#workout-count
          = @presenter.user.workouts.count

      %tr
        %th Exercises
        %td#exercise-count
          = @presenter.user.exercises.count

